<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rc.foodsignal">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="com.rc.foodsignal.application.FoodSignalApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity
            android:name="com.rc.foodsignal.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.rc.foodsignal.activity.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.rc.foodsignal.activity.RibbleActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.reversecoder.permission.activity.PermissionListActivity"
            android:label="@string/app_name_rc_permission"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.rc.foodsignal.activity.RestaurantLoginActivity"
            android:label="@string/title_activity_restaurant_login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.rc.foodsignal.activity.RestaurantSignUpActivity"
            android:label="@string/title_activity_restaurant_signup"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.rc.foodsignal.activity.AddUserBasicInfoActivity"
            android:label="@string/title_activity_add_user_basic_info"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.rc.foodsignal.activity.LocationListActivity"
            android:label="@string/title_activity_location_list"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.rc.foodsignal.activity.AddLocationActivity"
            android:label="@string/title_activity_add_location"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.rc.foodsignal.activity.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.rc.foodsignal.activity.SearchLocationActivity"
            android:label="@string/title_activity_search_location"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.rc.foodsignal.activity.AboutRestaurantActivity"
            android:label="@string/title_activity_about_restaurant"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.rc.foodsignal.activity.RestaurantMenuListActivity"
            android:label="@string/title_activity_restaurant_menu"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.rc.foodsignal.activity.AddRestaurantMenuActivity"
            android:label="@string/title_activity_add_restaurant_menu"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.rc.foodsignal.activity.AboutRestaurantMenuActivity"
            android:label="@string/title_activity_about_restaurant_menu"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.rc.foodsignal.activity.NotificationListActivity"
            android:label="@string/title_activity_notification"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.rc.foodsignal.activity.RestaurantDetailActivity"
            android:label="@string/title_activity_restaurant_detail"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.rc.foodsignal.activity.CardListActivity"
            android:label="@string/title_activity_card_list"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.rc.foodsignal.activity.AddCardActivity"
            android:label="@string/title_activity_restaurant_detail"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.rc.foodsignal.activity.CheckoutActivity"
            android:label="@string/title_activity_checkout"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.rc.foodsignal.activity.AndroidPayCardListActivity"
            android:label="@string/title_activity_android_pay"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.rc.foodsignal.activity.OrderListActivity"
            android:label="@string/title_activity_order"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Google Map -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/release_google_maps_api_key_home" />

    </application>

</manifest>