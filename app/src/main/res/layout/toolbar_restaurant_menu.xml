<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    style="@style/toolbar_base"
    app:contentInsetStart="0dp"
    app:popupTheme="@style/AppTheme.PopupOverlay">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_back" />

    <com.rc.foodsignal.view.CanaroTextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/activity_title_text_size" />

    <LinearLayout
        android:id="@+id/ll_done"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_add_address"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/fab_add" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_send_offer"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="end">

        <ImageView
            android:id="@+id/iv_send_offer"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:background="@drawable/vector_send_offer"
            android:clickable="false" />

        <TextView
            android:id="@+id/tv_offer_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_circle"
            android:gravity="center"
            android:minHeight="20dp"
            android:minWidth="20dp"
            android:text="0"
            android:textColor="@color/red"
            android:textSize="12sp" />
    </RelativeLayout>

</android.support.v7.widget.Toolbar>