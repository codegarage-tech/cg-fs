<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    style="@style/toolbar_base"
    app:contentInsetStart="0dp"
    app:popupTheme="@style/AppTheme.PopupOverlay">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_back" />

    <com.rc.foodsignal.view.CanaroTextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/activity_title_text_size" />

    <LinearLayout
        android:id="@+id/ll_add_card"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_add_card"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/fab_add" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_send_order"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:gravity="center_vertical|right"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_send_order"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/vector_send_offer" />

    </LinearLayout>

</android.support.v7.widget.Toolbar>